{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": false,
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "lib": ["es6", "es7", "dom"],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "exclude": ["node_modules"]
}
